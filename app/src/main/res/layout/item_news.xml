<?xml version="1.0" encoding="utf-8"?>
<com.skywell.test.ui.views.ContainerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/news_padding"
    android:paddingTop="@dimen/news_padding"
    android:paddingLeft="@dimen/news_padding"
    android:orientation="vertical"
    android:background="@drawable/item_white_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewNewsItemAvatar"
            style="@style/imageIconMedium"/>

        <TextView
            android:id="@+id/textViewNewsItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:textColor="@color/dark_gray_text"
            android:background="@drawable/item_clear_white_background"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewNewsItemBody"
        style="@style/textSmall"
        android:focusableInTouchMode="false"
        android:textIsSelectable="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonNewsItemLikeCount"
            style="@style/newsFooterButton"
            android:drawableLeft="@drawable/ic_menu_camera"/>

        <TextView
            android:id="@+id/buttonNewsItemRepostCount"
            style="@style/newsFooterButton"
            android:drawableLeft="@drawable/ic_menu_send"/>

        <TextView
            android:id="@+id/buttonNewsItemCommentsCount"
            style="@style/newsFooterButton"
            android:drawableLeft="@drawable/ic_menu_manage"/>

    </LinearLayout>

</com.skywell.test.ui.views.ContainerLayout>


<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/status_bar_color</item>
        <item name="colorControlActivated">@color/status_bar_color</item>
        <item name="colorControlHighlight">@color/status_bar_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="textSmall" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_gray_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="textLarge" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="newsFooterButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/footer_button_width</item>
        <item name="android:layout_height">@dimen/footer_button_height</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_gray_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/item_clear_white_background</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="imageIconMedium">
        <item name="android:layout_width">@dimen/load_icon_medium</item>
        <item name="android:layout_height">@dimen/load_icon_medium</item>
    </style>

</resources>
